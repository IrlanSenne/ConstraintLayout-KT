<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coffe">

    <TextView
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/capu"
        android:textColor="#fff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/bar"
        android:text="Cappuccino"
        android:textSize="30sp"
        android:textColor="#fff"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/time"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_time"
        app:layout_constraintLeft_toLeftOf="@id/bar"
        android:layout_marginEnd="104dp"
        app:layout_constraintRight_toRightOf="@id/heart"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:tint="@color/capu"
        android:layout_marginTop="160dp"/>
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/bar"
        app:layout_constraintRight_toRightOf="@id/textHeart"
        app:layout_constraintTop_toTopOf="@id/time"
        android:layout_marginEnd="96dp"
        android:text="15 Minutos"
        android:layout_marginTop="64dp"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_heart"
        android:layout_marginStart="104dp"
        app:layout_constraintLeft_toLeftOf="@id/time"
        app:layout_constraintRight_toRightOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:tint="@color/capu"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/textHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/textTime"
        app:layout_constraintRight_toRightOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/time"
        android:layout_marginStart="114dp"
        android:text="54214"
        android:layout_marginTop="64dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/capu"
        app:layout_constraintLeft_toLeftOf="@id/bar"
        app:layout_constraintRight_toRightOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/textHeart"
        android:layout_marginTop="34dp"
        android:layout_marginHorizontal="16dp" />

    <TextView
        android:id="@+id/descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textHeart"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="@string/descr_capu"/>

    <TextView
        android:id="@+id/ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/descricao"
        android:layout_marginTop="115dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:text="Ingredientes"/>

    <TextView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ingredientes"
        app:layout_constraintTop_toTopOf="@id/ingredientes"
        android:layout_marginTop="56dp"
        android:text="> 1 dose de espresso"/>
    <TextView
        android:id="@+id/i2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ingredientes"
        app:layout_constraintTop_toTopOf="@id/i1"
        android:layout_marginTop="32dp"
        android:text="> 100ml de leite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/ingredientes"
        app:layout_constraintTop_toTopOf="@id/i2"
        android:layout_marginTop="32dp"
        android:text="> 1 colher de chocolate em pÃ³"/>

</androidx.constraintlayout.widget.ConstraintLayout>